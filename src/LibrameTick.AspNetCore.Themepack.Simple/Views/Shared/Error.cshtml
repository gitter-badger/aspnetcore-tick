@page
@using Microsoft.AspNetCore.Mvc.Localization
@model Librame.AspNetCore.Themepack.Simple.ErrorPageModel
@inject IHtmlLocalizer<Librame.AspNetCore.Web.Resources.ErrorViewResource> Localizer
@{
    ViewData["Title"] = Localizer.GetString(r => r.Title);
}

<h1 class="text-danger">@ViewData["Title"]</h1>
<h2 class="text-danger">@Localizer.GetString(r => r.Descr)</h2>

@if (Model.ViewModel.ShowRequestId)
{
    <p>
        <strong>@Localizer.GetString(r => r.RequestId): </strong> <code>@Model.ViewModel.RequestId</code>
    </p>
}

